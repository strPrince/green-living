<!-- home.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel='icon' type='image/png'
        href='https://firebasestorage.googleapis.com/v0/b/greenlander-c8556.appspot.com/o/logo-icon.png?alt=media&token=7ee18bf1-5432-452b-8c2d-9eb5668bdc8e'
        class="custom-icon">
    <title>Green Living</title>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap');

        .nunito-ft {
            font-family: "Nunito", sans-serif;
            font-optical-sizing: auto;
            font-weight: 200;
            font-style: normal;
        }

        .custom-icon {
            width: 80px;
            /* Adjust the width as desired */
            height: 80px;
            /* Adjust the height as desired */
        }

        body,
        html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f7fcfa;
        }

       

        .hero {
            background-image: url('https://firebasestorage.googleapis.com/v0/b/greenlander-c8556.appspot.com/o/nature%20tree%20(2).jpg?alt=media&token=31ebe14a-602c-4c50-9441-9ceea431daa6');
            background-size: cover;
            background-position: center;
            height: 100vh;

            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            padding: 2rem;
            border-radius: 16px;
            margin: 2rem;
        }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #02200e;
        }

        .hero p {
            font-size: 1.2rem;
            max-width: 800px;
            margin-bottom: 2rem;
            color: #02200e;

        }

        .maintxt {
            height: 40%;
            padding: 20px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 16px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(2.8px);
            -webkit-backdrop-filter: blur(2.8px);
            border: 1px solid rgba(255, 255, 255, 0.3);

        }

        .maintxt>h1 {
            font-family: "Nunito", sans-serif;
            font-weight: 700;
            color: beige;
        }

        .maintxt>p {
            font-family: "Nunito", sans-serif;
            font-weight: 400;
            color: beige;
        }

        .cta-btn {
            background-color: #4f965e;
            color: white;
            border: none;
            padding: 1rem 2rem;
            font-size: 1.2rem;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;

        }

        .cta-btn:hover {
            background-color: #3d7a4a;
        }

        /* for wast managment section*/
        /* General Styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .section-title {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 2rem;
            color: #2f5437;
        }

        /* Waste Management Section */
        .articles-container {
            width: 80vw;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            /* Updated to display two columns */
            gap: 2rem;
        }

        .article-card {
            background-color: #f8f8f8;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.3s ease;

            transform: translateY(5px);
            animation: fadeInUp 0.8s ease-in-out normal;
        }

        .article-card:hover {
            transform: translateY(-5px);
        }

        .article-image img {
            width: 100%;
            height: fit-content;
            padding-top: 30px;
            object-fit: cover;
            display: flex;
            justify-content: center;

        }

        .article-content {
            padding: 1.5rem;
        }

        .article-title {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            color: #4f965e;
        }

        .article-author {
            color: #666;
            margin-bottom: 1rem;
        }

        .article-author span {
            color: #27ae60;
            text-decoration: underline;
        }

        .btn {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            text-decoration: none;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #4f965e;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #3d7a4a;
        }

        /* Animation */

        .article-card.animate {
            animation: fadeInUp 0.8s ease forwards;
        }


        /* for ucoming event section */
        /* General Styles */
       



        .cart-btn {
            height: fit-content;
            background-color: #e8f2eb;
            border: none;
            padding: 0.5rem;
            border-radius: 8px;
            cursor: pointer;
        }


        .cartbtn {


            cursor: pointer;
        }

        .cartbtn img {
            width: 40px;
            height: 40px;
        }

        /* Events Section */

        .event-title {
            background: linear-gradient(90deg, rgb(10, 45, 12) 0%, rgb(20, 172, 28) 50%, rgb(8, 206, 15) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .btn-primary {
            background: linear-gradient(90deg, rgba(76, 175, 80, 1) 0%, rgba(56, 142, 60, 1) 50%, rgba(76, 175, 80, 1) 100%);
            color: white;
            transition: background 0.3s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(90deg, rgba(56, 142, 60, 1) 0%, rgba(76, 175, 80, 1) 50%, rgba(56, 142, 60, 1) 100%);
        }

        .smoke-effect {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;

        }

        @keyframes smoke {
            0% {
                background-position: 0% 0%;
            }

            50% {
                background-position: 100% 100%;
            }

            100% {
                background-position: 100% 100%;
            }
        }


        .events-container {
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }

        .event-card {
            background-color: #f8f8f8;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            display: flex;
            flex-direction: row;
            transition: transform 0.3s ease;
        }

        .event-card:hover {
            transform: translateY(-5px);
            background: linear-gradient(120deg, rgba(0, 0, 0, 0) 25%, rgba(0, 128, 0, 0.5) 50%, rgba(0, 0, 0, 0) 75%);
            background-size: 200% 200%;
            -webkit-animation: smoke 4s infinite;
            animation: smoke 2s;
            z-index: 0;

            .event-title {
                color: white;
            }
        }

        .event-image img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .event-details {
            padding: 1.5rem;
        }

        .event-title {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            color: #4f965e;
        }

        .event-description {
            color: #666;
            margin-bottom: 1rem;
        }

        .btn {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            text-decoration: none;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #4f965e;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #3d7a4a;
        }


        /* product */

        .product {
            padding: 0 40px;
            margin-top: 20px;
        }

        h1 {
            color: #2c3e50;
            margin-bottom: 20px;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .product-card {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            transition: transform 0.3s ease;
        }

        .product-card:hover {
            transform: scale(1.05);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }

        .product-card:hover .product-image {
            /* Additional styles for the image on hover */
            opacity: 0.8;
        }

        .product-image {
            width: 100%;
            height: 70%;
            object-fit: cover;
        }

        .product-info {
            padding: 15px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .product-name {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .product-price {
            color: #27ae60;
            font-weight: bold;
        }

        /* Existing styles... */

        /* Footer Styles */
        .site-footer {
            background-color: #2f5437;
            color: #fff;
            padding: 3rem 0;
            margin-top: 4rem;
        }

        .top {
            display: flex;
            flex-direction: row;

        }

        .footer-content {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .footer-section {
            flex: 1;
            min-width: 200px;
            margin-bottom: 2rem;
        }

        .footer-section h3 {
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

        .footer-section ul {
            list-style-type: none;
            padding: 0;
        }

        .footer-section ul li {
            margin-bottom: 0.5rem;
        }

        .footer-section a {
            color: #fff;
            text-decoration: none;
        }

        .social-icons {
            display: flex;
            gap: 1rem;
        }

        .social-icon {
            font-size: 1.5rem;
        }

        .footer-bottom {
            text-align: center;
            padding-top: 2rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        /* Responsive Design Improvements */
        @media (max-width: 768px) {
            header {
                flex-direction: column;
                padding: 1rem;
            }

            .logo {
                margin-bottom: 1rem;
            }

            .logo>img {
                width: 100px;
                height: 100px;
            }

            nav {
                width: fit-content;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            nav ul {

                display: flex;
                flex-direction: row;
                align-items: center;
                gap: 1rem;

                margin-top: 20px;
            }

            .user-actions {
                margin-top: 1rem;
                display: flex;

            }

            .logo-txt {
                display: none;
            }

            .hero {
                margin: 0;
                height: auto;

            }

            .hero h1 {
                font-size: 2rem;
            }

            .hero p {
                font-size: 1rem;
            }

            .articles-container {
                grid-template-columns: 1fr;
            }

            .event-card {
                flex-direction: column;
            }

            .product-grid {
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            }

            .top {
                display: flex;
                flex-direction: row;
            }
        }


        .btn {
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        .product-card,
        .article-card,
        .event-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .product-card:hover,
        .article-card:hover,
        .event-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .dropdown {
            position: relative;
            display: inline-block;

        }

        .dropdown-toggle {
            background-color: #f1f1f1;
            color: #333;
            padding: 8px 16px;
            border: none;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: first baseline;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
            border-radius: 20px 20px 10px 10px;
        }

        .dropdown-menu p {
            color: #333;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .dropdown-menu a {
            color: #333;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .dropdown-menu a:hover {
            background-color: #f1f1f1;
        }

        .dark-mode {
            background: #222;
            color: #e6e6e6;
        }

        .dark-mode .login-container {
            background: rgba(34, 34, 34, 0.8);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        }

        .dark-mode input[type="email"],
        .dark-mode input[type="password"] {
            background: #333;
            color: #e6e6e6;
            border-color: #444;
        }

        .dark-mode button[type="submit"] {
            background-color: #4CAF50;
            color: #fff;
        }
    </style>
</head>


<body>


    <%- include('header') %>
    <main>
        <section class="hero">
            <div class="maintxt">
                <h1>Reduce, Recycle, Re-think</h1>
                <p>Join Us in Creating a Sustainable Future.</p>

                <button class="cta-btn">Learn More</button>
            </div>
        </section>
        <section class="w-full py-12 md:py-24 lg:py-32 bg-muted blog">
            <div class="container px-4 md:px-6">
                <div class="flex flex-col items-center justify-center space-y-4 text-center">
                    <div class="space-y-2">
                        <h2 class="text-3xl font-bold text-[#2f5437] tracking-tighter sm:text-5xl">Waste Management</h2>
                        <p
                            class="max-w-[700px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed">
                            Check out our latest blog posts and stay up-to-date with the latest news and insights.
                        </p>
                    </div>
                </div>
                <div class="mx-auto grid max-w-5xl grid-cols-1 gap-8 py-12 sm:grid-cols-2 lg:grid-cols-3">
                    <% if (blogs && blogs.length> 0) { %>
                        <% blogs.forEach(function(blog) { %>
                            <div
                                class="group flex flex-col overflow-hidden rounded-lg border bg-background shadow-sm transition-all hover:shadow-md">
                                <img src="<%= blog.imageUrl %>" alt="<%= blog.title %>" width="600" height="400"
                                    class="aspect-video w-full object-cover" />
                                <div class="flex flex-1 flex-col justify-between p-6 bg-neutral-200	 ">
                                    <div>
                                        <h3 class="text-xl font-semibold transition-colors group-hover:text-primary">
                                            <%= blog.title %>
                                        </h3>
                                        <p class="mt-3 line-clamp-3 text-muted-foreground">
                                            <%= blog.excerpt %>
                                        </p>
                                    </div>
                                    <a class="mt-4 inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50"
                                        href="/post/<%= blog._id %>" rel="ugc">
                                        Read More
                                    </a>
                                </div>
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <p class="col-span-full text-center text-muted-foreground">No blogs found.</p>
                                    <% } %>
                </div>
            </div>
        </section>

        <!-- Event section  -->

        <section class="events w-full py-12 md:py-24 lg:py-32 bg-muted" id="events">
            <div class="container px-4 md:px-6">
                <div class="flex flex-col items-center justify-center space-y-4 text-center">
                    <div class="space-y-2">
                        <h1 class="section-title text-3xl font-bold tracking-tighter sm:text-5xl"
                            style="color: #2f5437;">Upcoming Events</h1>
                        <p
                            class="max-w-[700px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed">
                            Check out our upcoming events and mark your calendars!
                        </p>
                    </div>
                </div>
                <div
                    class="events-container mx-auto grid max-w-5xl grid-cols-1 gap-8 py-12 sm:grid-cols-2 lg:grid-cols-3">
                    <% if (events && events.length> 0) { %>
                        <% events.forEach(function(event) { %>
                            <div
                                class="event-card group flex flex-col overflow-hidden rounded-lg border bg-background shadow-sm transition-all hover:shadow-md">
                                <div class="event-image">
                                    <img src="<%= event.mainimg %>" alt="<%= event.title %>" width="600" height="400"
                                        class="aspect-video w-full object-cover" />
                                </div>
                                <div class="flex flex-1 flex-col justify-between p-6 relative overflow-hidden">
                                    <div class="smoke-effect"></div>
                                    <div>
                                        <h3
                                            class="event-title text-xl font-semibold transition-colors group-hover:text-primary bg-gradient-to-r from-green-400 via-green-500 to-green-600 text-white p-2 rounded-md relative z-10">
                                            <%= event.title %>
                                        </h3>
                                        <p class="mt-2 text-sm text-muted-foreground relative z-10">
                                            <%= event.date %>
                                        </p>
                                        <p
                                            class="event-description mt-3 line-clamp-3 text-muted-foreground relative z-10">
                                            <%= event.des %>
                                        </p>
                                    </div>
                                    <a href="/event/<%= event._id %>"
                                        class="btn btn-primary mt-4 inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 relative z-10">
                                        View Details
                                    </a>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <p class="col-span-full text-center text-muted-foreground">No events found.</p>
                                    <% } %>
                </div>
            </div>
        </section>

        <!-- Product section  -->
        <!-- S living -->
        <section class="product" id="product">
            <h1 class="section-title text-3xl font-bold tracking-tighter sm:text-5xl">Sustainable living</h1>
            <div class="product-grid">
                <% items.forEach(item=> { %>
                    <div class="product-card">
                        <a href="<%= item.sl_link %>" style="text-decoration: none;display: inline;">
                            <img src="<%= item.sl_image %>" alt="<%= item.sl_title %>" class="product-image">
                            <div class="product-info">
                                <div class="product-name">
                                    <%= item.sl_title %>
                                </div>
                                <div class="product-price">₹<%= item.sl_price %>
                                </div>
                        </a>
                        <div class="button">
                            <button class="cart-btn" data-id="<%= item.id %>" data-name="<%= item.sl_title %>"
                                data-price="<%= item.sl_price %>" data-image="<%= item.sl_image %>">Add to Cart</button>
                        </div>
                    </div>

            </div>
            <% }) %>
                </div>

                <h1 class="section-title text-3xl font-bold tracking-tighter sm:text-5xl">Sustainable fashion</h1>
                <div class="product-grid">
                    <% items.forEach(item=> { %>
                        <div class="product-card">
                            <a href="<%= item.sf_link %>" style="text-decoration: none;display: inline;">
                                <img src="<%= item.sf_image %>" alt="<%= item.sf_title %>" class="product-image">
                                <div class="product-info">
                                    <div class="product-name">
                                        <%= item.sf_title %>
                                    </div>
                                    <div class="product-price">₹<%= item.sf_price %>
                                    </div>
                            </a>
                            <div class="button">
                                <button class="cart-btn addit" data-id="<%= item.id %>" data-name="<%= item.sf_title %>"
                                    data-price="<%= item.sf_price %>" data-image="<%= item.sf_image %>">Add to
                                    Cart</button>
                            </div>
                        </div>

                </div>
                <% }) %>
                    </div>
        </section>

    </main>
   <%- include('footer') %>
    <script>
      
   
            // Your code to add event listener goes here
           

           
        // .........
        // Intersection Observer for animation
        // 
       

       
        document.addEventListener("DOMContentLoaded", function () {
            // Retrieve cart from localStorage or initialize it as an empty array
            let cart = JSON.parse(localStorage.getItem('cart')) || [];

            function updateLocalStorage() {
                localStorage.setItem('cart', JSON.stringify(cart));
            }
           
            document.querySelectorAll('.addit').forEach(button => {
                button.addEventListener('click', function (event) {
                    event.preventDefault();
                    const item = {
                        id: this.getAttribute('data-id'),
                        name: this.getAttribute('data-name'),
                        price: this.getAttribute('data-price'),
                        image: this.getAttribute('data-image')
                    };
                    cart.push(item);
                    updateLocalStorage();
                    alert('okay');
                });
            });
        });

    </script>

</body>

</html>